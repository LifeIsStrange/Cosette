schema su(uid:int, uname:int, city:int);
schema sp(uid:int, size:int);

table Usr(su);
table Picture(sp);

query q1
`select x.uid as xid, x.uname as xname,
	(select count(*) as cn
	 from Picture y
	 where x.uid = y.uid and y.size > 10000) as cnt
 from Usr x
 where x.city = 3`;


query q2
`select x.uid as xid, x.uname as xname, count(*) as cnt
 from Usr x, Picture y
 where x.uid = y.uid and y.size > 10000 and x.city = 3
 group by x.uid, x.uname`;

verify q1 q2;